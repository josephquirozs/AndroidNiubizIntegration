<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed state -->
    <item android:drawable="@drawable/visanet_rounded_corners_bg_gray" android:state_pressed="true"/>
    <!-- enable state -->
    <item android:drawable="@drawable/visanet_rounded_corners_bg_gray" android:state_enabled="false"/>
    <!-- focused state -->
    <item android:drawable="@drawable/visanet_rounded_corners_bg_red" android:state_focused="true"/>
    <!-- default state -->
    <item android:drawable="@drawable/visanet_rounded_corners_bg_red"/>

</selector>