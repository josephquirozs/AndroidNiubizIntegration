    </TableRow>

    <TableRow
        android:id="@+id/row_tokenization1"
        android:layout_marginTop="@dimen/visanet_3"
        android:layout_marginBottom="@dimen/visanet_15"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <Button
                android:id="@+id/add_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/visanet_50"
                android:background="@drawable/visanet_rounded_corners_bg_gray"
                android:drawableStart="@drawable/visa_ic_add_card"
                android:drawablePadding="15dp"
                android:gravity="start|center"
                android:paddingStart="@dimen/visanet_15"
                android:text="@string/visanet_text_new_card"
                android:textAllCaps="false"
                android:textColor="@color/visanet_white" />

        </LinearLayout>

    </TableRow>
</TableLayout>



