<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/form_tokenization"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    tools:showIn="@layout/activity_visanet_authorization">

    <TableRow
        android:id="@+id/row_card_tokenization1"
        android:layout_marginTop="@dimen/visanet_3"
        android:background="@drawable/visanet_rounded_corners_bg_gray_medium"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/visanet_50">

            <RadioButton
                android:id="@+id/card_radio1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:paddingRight="@dimen/visanet_10" />

            <ImageView
                android:id="@+id/card_logo1"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/logo2_visa" />

            <TextView
                android:id="@+id/card_number1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/visanet_10"
                android:text="************1234" />


        </LinearLayout>

        <ImageView
            android:id="@+id/card_trash1"
            android:layout_width="@dimen/visanet_24"
            android:layout_height="@dimen/visanet_24"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_trash" />

    </TableRow>

    <TableRow
        android:id="@+id/row_card_cvv1"
        android:layout_marginTop="@dimen/visanet_3"
        android:layout_marginBottom="@dimen/visanet_3"
        android:gravity="center_vertical"
        android:visibility="gone">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <lib.visanet.com.pe.visanetlib.presentation.ui.custom.VisaNetInputField
            android:id="@+id/cvv_1"
            style="@style/VisaNetInput"
            android:layout_width="0dp"
            android:layout_height="@dimen/visanet_50"
            android:layout_weight="1"
            android:digits="0123456789"
            android:drawableStart="@drawable/visanet_ic_cvv"
            android:drawableEnd="@drawable/visanet_ic_help"
            android:gravity="center_vertical"
            android:hint="@string/visanet_hint_cvv"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="3"
            android:nextFocusForward="@+id/name"
            android:paddingEnd="@dimen/visanet_15" />
    </TableRow>

    <TableRow
        android:id="@+id/row_card_tokenization2"
        android:layout_marginTop="@dimen/visanet_3"
        android:background="@drawable/visanet_rounded_corners_bg_gray_medium"
        android:visibility="gone">

