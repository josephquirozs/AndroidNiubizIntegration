                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/visadefault" />

            <TextView
                android:id="@+id/card_number2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/visanet_10"
                android:text="************1234" />


        </LinearLayout>

        <ImageView
            android:id="@+id/card_trash2"
            android:layout_width="@dimen/visanet_24"
            android:layout_height="@dimen/visanet_24"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_trash" />

    </TableRow>

    <TableRow
        android:id="@+id/row_card_cvv2"
        android:layout_marginTop="@dimen/visanet_3"
        android:layout_marginBottom="@dimen/visanet_3"
        android:gravity="center"
        android:visibility="gone">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <lib.visanet.com.pe.visanetlib.presentation.ui.custom.VisaNetInputField
            android:id="@+id/cvv_2"
            style="@style/VisaNetInput"
            android:layout_width="0dp"
            android:layout_height="@dimen/visanet_50"
            android:layout_weight="1"
            android:digits="0123456789"
            android:drawableStart="@drawable/visanet_ic_cvv"
            android:drawableEnd="@drawable/visanet_ic_help"
            android:gravity="center_vertical"
            android:hint="@string/visanet_hint_cvv"
            android:imeOptions="actionNext"
            android:inputType="phone"
